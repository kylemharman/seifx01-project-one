<%= simple_form_for( current_user, html: { class: 'form-group' }) do |f| %>
    <%= f.label "Profile Photo" %>
    <%= f.file_field :avatar %>
    <%= f.input :username %>
    <%= f.input :bio %>
    <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>